@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUSer";
    var roleId = TempData["Id"];
}

<h1>AddOrRemoveUSer</h1>

<form asp-action="AddOrRemoveUser">

  @for (int i = 0; i < Model.Count; i++)
    {
        <div>

        <input type="checkbox" asp-for="@Model[i].IsSelected" />
        <input type="hidden" asp-for="@Model[i].UserName" />
        <input type="hidden" asp-for="@Model[i].UserId" />
        <label asp-for="@Model[i].UserName">@Model[i].UserName</label>
        </div>
    }
        
    
    <input type="submit" value="Save" asp-route-id="@roleId" />
    <a type="button" asp-action="Update" asp-route-id="@roleId" value="Cancel" asp-route-id="@roleId" ></a>
</form>