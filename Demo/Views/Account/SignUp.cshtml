@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model SignUpViewModel
<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        <form asp-action="SignUp" enctype="multipart/form-data">

            <input class="text" type="text" asp-for="UserName" placeholder="Username" required="">
            <input class="text" type="text" asp-for="FirstName" placeholder="Username" required="">
            <input class="text" type="text" asp-for="LastName" placeholder="Username" required="">
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
            <input class="text" type="password" asp-for="Password" placeholder="Password" required="">
            <input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
            <input class="text w3lpass" asp-for="Image" placeholder="image" required="">
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="IAccept" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
    </div>
</div>
@section Validation{

    <partial name="_ValidationScriptsPartial" />

}