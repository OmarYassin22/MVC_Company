@model SingInViewModel
@{

    Layout = "_AuthLayout";
    ViewData["Title"]="Signin";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All"></div>
		<form action="SignIn" method="post">
			<input class="text" type="text" asp-for="UserName" placeholder="Email" required="">
			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" class="checkbox" asp-for="RememberMe">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp" > Register Now!</a></p>
		<p>Don't have an Account? <a asp-action="ForgetPassword" > Forget Passwor!</a></p>
	</div>
</div>