@model IEnumerable<DepartmentView>

@{

    ViewData["Title"] = "Department Page";
}
<h1>Departments</h1>
@{
    <p class="alert-danger h-100">@TempData["Deleted"] </p>
    <p class="alert-success h-100">@TempData["Created"] </p>
    <p class="alert-success h-100">@TempData["Updated"] </p>

    <form asp-action="Index"  >
        <div class="row">
        <div class="col-8">

                <input type="text" name="Search" class="form-control" value="@TempData[ "name"]" />
        </div>
        <div class="col-6">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>

    </div>
    </form>

    @if (Model.Count() > 0)
    {

        <a class="btn btn-primary w-25 m-5" asp-controller="Department" asp-action="Create">Create</a>
        <table class="table d-sm-table-cell table-hover w-100">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(d => d.Id) </th>
                    <th> @Html.DisplayNameFor(d => d.Code) </th>
                    <th> @Html.DisplayNameFor(d => d.Name) </th>
                    <th> @Html.DisplayNameFor(d => d.CreationDate) </th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reverse())
                {
                    <tr>
                        <th> @item.Id</th>
                        <th> @item.Code</th>
                        <th> @item.Name</th>
                        <th> @item.CreationDate</th>
                        <partial name="PartialButtons" model="@item.Id" />
                    </tr>

                }
            </tbody>
        </table>

    }
}